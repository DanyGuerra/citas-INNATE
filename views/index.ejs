              <option value="">Cuernavaca</option>
              <option value="">Monterrey</option>
              <option value="">Guadalajara</option>
              <option value="">Puebla</option>
              <option value="">Quer√©taro</option>
            </select>
          </div>
          <input
            type="text"
            name="foo"
            id="fecha"
            placeholder="DD / MM/ AAA"
            readonly
          />
        </div>
        <!-- <p id="horariosP">Horarios</p> -->
        <div id="horarios" class="horarios">
          <h1 id="title-hora">Horarios disponibles</h1>
        </div>
        <!-- <button id="agendar_btn">AGENDAR</button> -->
